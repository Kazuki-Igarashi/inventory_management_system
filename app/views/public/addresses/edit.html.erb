<div class="address">
  <h4>配送先編集</h4>

  <%= render 'layouts/error', model: @address %>
  <%= form_with model: @address, url: address_path, method: :patch do |f| %>
    <table>
        <tr>
            <td><%= f.label :post_code, "住所(ハイフンなし)" %></td><td><%= f.text_field :post_code, placeholder: "0000000" %></td><td><br /></td>
        </tr>
        <tr>
            <td><%= f.label :address, "住所" %></td><td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0"%></td><td><br /></td>
        </tr>
        <tr>
            <td> <%= f.label :name, "宛名" %></td><td><%= f.text_field :name, placeholder: "令和道子" %></td>
        </tr>
        <tr>
          <td> <%#= f.label :company_name, "会社名" %></td><td><%#= f.text_field :company_name, placeholder: "株式会社A" %></td>
        </tr>
        <tr>
          <td><%= f.submit '変更内容を保存する', class: "button button__sm" %></td>
        </tr>
        <tr><td>
        <%= link_to "戻る", addresses_path, class: "button button__sm" %>
        </td></tr>
    </table>
  <% end %>
</div>