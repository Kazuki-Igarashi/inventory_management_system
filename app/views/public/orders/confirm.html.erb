  <div>
    <h2>注文情報確認</h2>
  </div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @issues.each do |issue| %>
          <tr>
            <td><%= image_tag issue.receiving_stock.image,  size: "60x60" %></td>
            <td><%= issue.receiving_stock.name %></td>
            <td>￥<%= issue.add_tax_cost.to_s(:delimited) %></td>
            <td><%= issue.stock %></td>
            <td>￥<%= issue.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table>
        <!--<tr><th class="pb-3">支払い方法</th><td class="pb-3"><%#= @order.payment_method_i18n %></td></tr>-->
        <tr><th>お届け先</th><td>〒<%=  @order.address.post_code + "  " +@order.address.address %></td></tr>
      </table>

    </div>

    <div>
      <table>
        <tr><th>送料</th><td><%= @postage %>円</td></tr>
        <tr><th>商品合計</th><td><%= @sub_total.to_s(:delimited) %>円</td></tr>
        <tr><th>請求金額</th><td><%= @total.to_s(:delimited) %>円</td></tr>
      </table>
    </div>

  </diV>

  <div>
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%#= f.hidden_field :post_code, :value => @order.address.post_code %>
      <%= f.hidden_field :address_id, :value => @order.address.id %>
      <%#= f.hidden_field :issue_id, :value => @issues.pluck(:id) %>
      <%#= f.hidden_field :total_payment, :value => @total %>
      <%#= f.hidden_field :shipping_cost, :value => @postage %>
      <%#= f.hidden_field :payment_method, :value => @order.payment_method %>
      <div>
        <%= f.submit "出荷を確定する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>