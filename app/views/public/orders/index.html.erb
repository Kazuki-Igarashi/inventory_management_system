<div class="cotainer">

  <div class="row d-flex justify-content-center">
    <div class="col-11">
      <h2 class="my-4">出荷履歴一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>販売会社</th>
          </tr>
        </thead>
        <tbody>
           <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/ %m/ %d') %></td>
            <td><%= "〒#{order.post_code}" + " " + "#{order.address}"  %></td>
            <td><%= order.name %></td>
            <td><%= "#{order.total_payment.to_s(:delimited)}円" %></td>
            <td><%= order.sales_company_name %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-primary"  %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

</div>