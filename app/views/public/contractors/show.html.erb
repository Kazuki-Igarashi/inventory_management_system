<div>
  <h3>マイページ</h3>
</div>

<div>
  <table>
    <tr>
      <th>登録情報</th>
      <% if current_customer.email != "guest@example.com" %> 
      <td><%= link_to "編集する", edit_contractors_path %></td>
      <% end %>
    </tr>
  </table>
</div>

<div class="row ml-5">
  <table class="col-10 table table-bordered">

    <tr>
      <td class="table-active", style="width:10%;">氏名</td>
      <td style="width:30%;"><%= @customer.name %></td>
    </tr>

    <tr>
      <td class="table-active">カナ</td>
      <td><%= @customer.name_kana %></td>
    </tr>

    <tr>
      <td class="table-active">郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>

    <tr>
      <td class="table-active">住所</td>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <td class="table-active">電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>

    <tr>
      <td class="table-active">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>

    <tr>
      <td class="table-active">会社名</td>
      <td><%= @customer.company_name %></td>
    </tr>
    
    <tr>
      <td class="table-active">会社名カナ</td>
      <td><%= @customer.company_name_kana %></td>
    </tr>


  </table>
</div>

<div class="row mx-5 my-4">
    <table class="col-3 table table-borderless">
      <tr>
        <th class="align-middle">配送先</th>
        <td><%= link_to "一覧を見る", addresses_path %></td>
      </tr>
  
      <tr>
        <th class="align-middle">注文履歴</th>
        <td><%= link_to "一覧を見る", orders_path %></td>
      </tr>
    </table>
    <% if current_customer.email != "guest@example.com" %>
      <div class="row">
        <%= link_to "",edit_contractors_path,class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_customer_#{current_customer.id}" %>
      </div>
    <% end %>
</div>