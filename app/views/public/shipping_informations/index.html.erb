
<h4>出荷商品</h4>
  <%= link_to "商品を空にする", issues_destroy_all_path, method: :delete,
  data: { confirm: "全部削除しますか？" },class: "btn btn-danger" %>
    <table class="table">
      <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
      </thead>
      <tbody>
        <% total = 0 %>
        <% @issues.each do |issue| %>
          <tr>
            <td>
              <%= image_tag issue.receiving_stock.image, size: "60x60" %>
              <strong><%= issue.receiving_stock.name %></strong>
            </td>
            <td>¥<%= issue.selling_price %></td>
            <td>
              <%= form_with model: issue do |f| %>
                <%= f.number_field :amount, value: issue.stock %>個
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td>¥<%= (issue.selling_price * issue.stock).to_s(:delimited) %></td>
            <% total += issue.selling_price * issue.stock %>
            <td>
              <%= link_to "削除する", issue_path(issue.id), method: :delete, "data-confirm" => "商品を削除しますか？", class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  <div class="row mt-5">
    <div class="col-md-7 offset-md-1">
      <%= link_to "出荷商品を追加する", issues_path, class: "btn btn-primary" %>
    </div>
    <table class="col-2 offset-md-1 text-right">
      <tr>
        <th>合計金額</th>
        <th>¥<%= total.to_s(:delimited) %></th>
      </tr>
    </table>
  </div>

  <% if @issues.count > 0 %>
  <div class="row mt-5">
    <div class="col-md-9 offset-md-1 text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto" %>
    </div>
 </div>
 <% end %>
</div>

<%#= @issues.inspect %>