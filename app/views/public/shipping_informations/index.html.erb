
<h4>出荷商品</h4>
  <%= link_to "商品を空にする", shipping_informations_destroy_all_path, method: :delete,
  data: { confirm: "全部削除しますか？" },class: "btn btn-danger" %>
    <table class="table">
      <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
      </thead>
      <tbody>
        <% @shipping_informations.each do |shipping_information| %>
          <tr>
            <td>
              <%= image_tag shipping_information.isuue.image, size: "60x60" %>
              <strong><%= shipping_information.isuue.name %></strong>
            </td>
            <td>¥<%= shipping_information.item.add_tax_cost %></td>
            <td>
              <%= form_with model: shipping_informations do |f| %>
                <%= f.number_field :amount, placeholder: "500" %>個
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td>¥<%= shipping_informations.subtotal.to_s(:delimited) %></td>
            <td>
              <%= link_to "削除する", shipping_information_path(shipping_information.id), method: :delete, "data-confirm" => "商品を削除しますか？", class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  <div class="row mt-5">
    <div class="col-md-7 offset-md-1">
      <%= link_to "出荷商品を追加する", issues_path, class: "btn btn-primary" %>
    </div>
    <table class="col-2 offset-md-1 text-right">
      <tr>
        <th>合計金額</th>
        <th>¥<%= @total.to_s(:delimited) %></th>
      </tr>
    </table>
  </div>

  <% if @shipping_informations.count > 0 %>
  <div class="row mt-5">
    <div class="col-md-9 offset-md-1 text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto" %>
    </div>
 </div>
 <% end %>
</div>

<%= @issues.inspect %>