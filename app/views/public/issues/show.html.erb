
<div class="issue__show">
  <h1>商品詳細</h1>
  <%= render 'layouts/error', model: @issue %>
    <%= form_with model: @issue, method: :post, local: true do |f| %>
      <% if @receiving_stock.image.attached? %>
        <%= image_tag @receiving_stock.image, class: "show-image" %>
      <% else %>
        <%= image_tag 'no_image', class: "show-image" %>
      <% end %>
      
      <div><%= @receiving_stock.name %></div>
      <%= f.hidden_field :receiving_stock_id %>
      <%= @receiving_stock.explanation %>
      
      <div>入庫価格</div>
      <%= @receiving_stock.purchase_price %>円
      
      <div>出庫価格</div>
      <%= f.number_field :selling_price, placeholder: "500" %>円
      
      <div>在庫数</div>
      <%= @receiving_stock.name %>  :合計<%= @receiving_stock_sum %>個
      
      <div class>出庫数</div>
      <%= f.number_field :stock, placeholder:  "個数入力" %>個
      
      <div>出荷先企業</div>
      <div>
        <%= link_to "取引先一覧・登録", companys_path %>
      </div>
      
      <div>出荷先企業</div>
      <div class="issue__select">
        <%= f.collection_select :sales_company_name, Company.all, :name, :name, include_blank: "--選択してください" %>
      </div>
      
      <div style="padding: 10px;">
        <%= f.submit '出庫する', class: "button button__pink"%>
      </div>
    <% end %>
    <div class='issue__index'>
      <%= link_to "一覧ページへ戻る", issues_path, class: "button button__sm" %>
    </div>
</div>
