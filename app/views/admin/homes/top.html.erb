
  <h2>注文履歴一覧</h2>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>      
      <tbody>
        <% @order.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do%>
                <%= order.created_at.strftime("%Y-%m-%d")%>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.sales_company_name %></td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>