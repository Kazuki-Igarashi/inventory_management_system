<div  class="address">
  <h4>配送先一覧</h4>
    <%= render 'layouts/error', model: @address %>
  <table class="address__name">
    <thead>
      <tr>
        <th scope="col">郵便番号</th>
        <th scope="col">住所</th>
        <th scope="col">宛名</th>
      </tr>
    </thead>
    <tbody>
       <% @addresses.each do |address| %>
      <tr>
        <td>〒<%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>